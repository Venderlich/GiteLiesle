{% extends 'Front/Common/base.html.twig' %}

    {% block body %}
        <!-- Page Content -->
        <div class="container">
            <div class="my-5">
                <h1 class="text-center">Bienvenue a L'aumônerie</h1>
                <h2 class="text-center">Gite de charme en Franche Comptée</h2>
            </div>

            <!-- Marketing Icons Section -->
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item active">
                        <img class="d-block img-fluid" src="http://placehold.it/700x400" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="http://placehold.it/700x400" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="http://placehold.it/x400" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <!-- /.row -->

            <section class="my-5">
                <div class="container">
                    <h1>{{ acc.title }}</h1>
                    <p>{{ acc.texte }}</p>
                </div>
            </section>

            <hr>


        </div>
        <!-- /.container -->

    {% endblock %}


